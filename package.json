{
  "name": "md-server",
  "version": "1.0.0",
  "description": "A CLI tool that serves markdown files as HTML with Tailwind styling",
  "main": "src/server.js",
  "type": "module",
  "bin": {
    "md-server": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "dev": "node cli.js --port 3000",
    "build": "tailwindcss -i src/styles/tailwind.css -o public/tailwind.css --minify",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o public/tailwind.css --minify",
    "watch": "tailwindcss -i src/styles/tailwind.css -o public/tailwind.css --watch"
  },
  "keywords": [
    "markdown",
    "server",
    "cli",
    "html",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "marked": "^9.1.6",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "tailwindcss": "^4.1.10"
  }
}